      logical,parameter,public :: cdr_source  = {{ cdr_frc.cdr_source|lower }}  ! default. Should be false if not using CDR forcing
      logical,parameter,public :: cdr_volume  = {{ cdr_frc.cdr_volume|lower }}  ! If false, use tracer flux only
