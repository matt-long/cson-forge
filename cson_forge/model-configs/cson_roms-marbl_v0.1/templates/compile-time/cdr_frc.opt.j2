      logical,parameter :: cdr_analytical  = {{ cdr_frc.cdr_analytical|lower }}     ! If true, cdr release specified in ana_cdf_frc.h

      integer,parameter,public :: ncdr={{ cdr_frc.ncdr }}   !! number of discrete CDR releases

